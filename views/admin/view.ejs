<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                Admin dashboard
            </p>
            <p class="list-group">
                <li class="list-group-item"><a href="/admin/add" class="btn btn-primary"> Add Subjects</a></li>
            </p>
        </div>
    </div>
    <div class="row text-center" style="">
        <div class="col-lg-12">
            <h3>Fields!</h3>    
            <% fields.forEach(function(field){%>
                        <div class="col-md-3 col-sm-6">
                                    <ul ><h2><%= field.field %></h2></ul> <!-- add collapse effect -->
                                    <% field.subject.forEach(function(sub){ %>
                                        <div>
                                                <p><li style="list-style-type: none; display:block"> <%= sub %></li></p>
                                        </div>
                                    <%})%>
            <%})%>
        </div>
    </div>
</div>
</div>

<% include ../partials/footer %>